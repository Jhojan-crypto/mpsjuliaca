{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "backend/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": false,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}